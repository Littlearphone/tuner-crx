{
    "manifest_version": 2,
    "name": "tuner",
    "version": "1.0.0",
    "description": "Littlearphone的插件示例",
    "homepage_url": "https://www.baidu.com",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "icons": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "webRequest",
        "contextMenus",
        "notifications",
        "webRequestBlocking",
        "declarativeContent",
        "http://*/*",
        "https://*/*"
    ],
    "page_action": {
        "default_title": "页面配置",
        "default_popup": "index.html#/popup/index"
    },
    "options_page": "index.html#/option/index",
    "options_ui": {
        "page": "index.html#/option/index",
        "chrome_style": true
    }
}
